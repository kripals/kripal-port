---
import Tecnos_icons from "./Technos_icons.astro";
import Html from '../icons/Technologies/Languages/Html.astro';
import Css from '../icons/Technologies/Languages/Css.astro';
import Csharp from '../icons/Technologies/Languages/Csharp.astro';
import Js from '../icons/Technologies/Languages/Js.astro';
import Php from '../icons/Technologies/Languages/Php.astro';
import Ast from '../icons/Technologies/Frameworks_Libraries/Ast.astro';
import Bootstrap from '../icons/Technologies/Frameworks_Libraries/Bootstrap.astro';
import Express from '../icons/Technologies/Frameworks_Libraries/Express.astro';
import Node from '../icons/Technologies/Frameworks_Libraries/Node.astro';
import React from '../icons/Technologies/Frameworks_Libraries/React.astro';
import Tailwind from '../icons/Technologies/Frameworks_Libraries/Tailwind.astro';
import Mongo from '../icons/Technologies/Databases/Mongo.astro';
import Mysql from '../icons/Technologies/Databases/Mysql.astro';
import Figma from '../icons/Technologies/Additional_Tools/Figma.astro';
import Git from '../icons/Technologies/Additional_Tools/Git.astro';
import Netlify from '../icons/Technologies/Additional_Tools/Netlify.astro';
import Vercel from '../icons/Technologies/Additional_Tools/Vercel.astro';
import Notion from '../icons/Technologies/Additional_Tools/Notion.astro';
import Tecno_icon from '../icons/Titles/Techno_icon.astro';
---

<div class="flex flex-col items-center">
  <h2 class="text-4xl font-semibold pb-10 flex gap-x-3 items-center text-center mb-4">
    <Tecno_icon class="w-12 h-12" /> Technologies
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 p-4">
    <div>
      <h2 class="text-2xl opacity-80 mb-6 text-center">Languages</h2>
      <nav class="flex flex-wrap justify-center gap-4">
        <Tecnos_icons title="HTML"><Html class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="CSS"><Css class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="JavaScript"><Js class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="PHP"><Php class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="C#"><Csharp class="w-12 h-12" /></Tecnos_icons>
      </nav>
      <h2 class="text-2xl opacity-80 mt-8 mb-6 text-center">Frameworks and Libraries</h2>
      <nav class="flex flex-wrap justify-center gap-4">
        <Tecnos_icons title="Astro"><Ast class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="Bootstrap"><Bootstrap class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="Express"><Express class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="Node.js"><Node class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="React"><React class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="Tailwind CSS"><Tailwind class="w-12 h-12" /></Tecnos_icons>
      </nav>
    </div>
    
    <div>
      <h2 class="text-2xl opacity-80 mb-6 text-center">Databases</h2>
      <nav class="flex flex-wrap justify-center gap-4">
        <Tecnos_icons title="MongoDB"><Mongo class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="MySQL"><Mysql class="w-12 h-12" /></Tecnos_icons>
      </nav>
      <h2 class="text-2xl opacity-80 mt-8 mb-6 text-center">Additional Tools</h2>
      <nav class="flex flex-wrap justify-center gap-4">
        <Tecnos_icons title="Figma"><Figma class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="Git"><Git class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="Netlify"><Netlify class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="Vercel"><Vercel class="w-12 h-12" /></Tecnos_icons>
        <Tecnos_icons title="Notion"><Notion class="w-12 h-12" /></Tecnos_icons>
      </nav>
    </div>
  </div>
</div>